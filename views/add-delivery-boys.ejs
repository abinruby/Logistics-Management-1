<%-include('./includes/user-header.ejs')-%>
<style>
    .body-div{
      min-height: 100vh;
      display: flex;
      align-items: flex-start;
      padding-top: 5%;
      justify-content: center;
      background: #4070f4;
  }
  .input-field{
      justify-content: center;
      display: flex;
      margin: 2em;
  }
  .container{
      position: relative;
      max-width: 80%;
      width: 100%;
      border-radius: 6px;
      padding: 30px;
      margin: 0 15px;
      background-color: #fff;
      box-shadow: 0 5px 10px rgba(0,0,0,0.1);
  }
  .button {
    background-color: #4CAF50; /* Green */
    border: none;
    color: white;
    padding: 10px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 4px;
  }
  #customers {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#customers td, #customers th {
  border: 1px solid #ddd;
  padding: 8px;
}

#customers tr:nth-child(even){background-color: #f2f2f2;}

#customers tr:hover {background-color: #ddd;}

#customers th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}  
</style>
<div class="body-div">
    <div class="container">
        <h3>Add Delivery Boys</h3>
         <form action="/add-delivery-boys" method="post">
            <div class="input-field">
                <div>
                <label for="">Enter name</label>
                <input type="text" name="name">
            </div>
            <div>
                <label for="">Create User Id</label>
                <input type="text" name="userId">
            </div>
            <div>
                <label for="">Create Password</label>
                <input type="text" name="password">
            </div>
            </div>
            <button class="button" type="submit">Submit</button>
         </form>
         <table id="customers">
            <thead>
                <tr>
                    <th>Delivery Boys</th>
                    <th>UserId</th>
                    <th>Password</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                    <% for(let i=0;i < boysDetails.length; i++){%>
                        <tr>
                        <td><%=boysDetails[i].name%></td>
                        <td><%=boysDetails[i].userId%></td>
                        <td><%=boysDetails[i].password%></td>
                        <td><a href="">Delete</a></td>
                    </tr>
                        <%} %>                  
               
            </tbody>
         </table>
    </div>  
</div>
<%-include('./includes/user-footer.ejs')-%>