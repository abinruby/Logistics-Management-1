<%-include('./includes/user-header.ejs')-%>

<style>
    .body-div{
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #4070f4;
}
.container{
    position: relative;
    max-width: 80%;
    width: 100%;
    border-radius: 6px;
    padding: 30px;
    margin: 0 15px;
    background-color: #fff;
    box-shadow: 0 5px 10px rgba(0,0,0,0.1);
}
</style>

<div class="body-div">
    <div class="container">
        <form action="/track" method="post">
            <label for="">Enter Doc No.</label>
            <input type="number" name="conId">
