          <div class="col-5">
            <label for="ex3">city</label>
            <input class="form-control" value="<%=consignment.receiveer_city%>" id="ex3" name="receiveer_city" type="text">
          </div>
          <div class="col-5">
            <label for="ex3">pincode</label>
            <input class="form-control" value="<%=consignment.receiver_pincode%>" id="ex3" name="receiver_pincode" type="text">
          </div>
          <div class="col-5">
            <label for="ex3">Contact Number</label>
            <input class="form-control" value="<%=consignment.receiver_number%>" name="receiver_number" id="ex3" type="number">
