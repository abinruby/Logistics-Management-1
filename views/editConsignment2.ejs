        <div class="card-header">Receiver Details</div>
        <div class="card-body">
          <div class="col-5">
            <label for="ex3">Reciever Name</label>
            <input class="form-control" value="<%=consignment.receiver_name%>" name="receiver_name" id="ex3" type="text">
          </div>
          <div class="col-5">
            <label for="ex3">Address</label>
           <textarea class="form-control" value="<%=consignment.receiver_address%>" name="receiver_address" id="" cols="30" rows="3"><%=consignment.receiver_address%></textarea>
