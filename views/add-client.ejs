<%-include('./includes/admin-header.ejs')-%>
<style>
      .body-div{
        min-height: 100vh;
        display: flex;
        align-items: flex-start;
        padding-top: 5%;
        justify-content: center;
        background: #4070f4;
    }
    .input-field{
        justify-content: center;
        
        margin: 2em;
    }
    .container{
        position: relative;
        max-width: 80%;
        width: 100%;
        border-radius: 6px;
        padding: 30px;
        margin: 0 15px;
        background-color: #fff;
        box-shadow: 0 5px 10px rgba(0,0,0,0.1);
    }
    .button {
      background-color: #4CAF50; /* Green */
      border: none;
      color: white;
      padding: 10px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
      border-radius: 4px;
    }  
</style>
<div class="body-div">
    <div class="container">
        <h3>Register credit client</h3>
        <form action="">
            <div class="input-field">
            <label for="">Client Name</label>
            <input type="text">
        </div>
        <div class="input-field">
            <label for="">Address</label>
            <input type="text">
        </div>
        <div class="input-field">
            <label for="">District</label>
            <input type="text">
        </div>
        <div class="input-field">
            <label for="">State</label>
            <input type="text">
        </div>
        <div class="input-field">
            <label for="">GST</label>
            <input type="number">
        </div>
        <div class="input-field">
            <label for="">Contact</label>
            <input type="number">
        </div>
        <button class="button" type="submit">Submit</button>
        </form>
    </div>

</div>
<%-include('./includes/admin-footer.ejs')-%>
