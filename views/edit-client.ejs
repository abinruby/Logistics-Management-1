
<style>
    body{
        margin: 0px;
    }
      .body-div{
        min-height: 100vh;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        background: #4070f4;
    }
    .container form .fields{
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
}
form .fields .input-field3{
    display: flex;
   min-width: calc(100% / 2 - 15px);
    flex-direction: column;
    margin: 4px 0;
}
    .input-field{
        justify-content: center;
        
        margin: 2em;
    }
    .container{
        position: relative;
        max-width: 80%;
        width: 100%;
        border-radius: 35px;
        padding: 20px;
        margin: 45px;
        background-color: #fff;
        box-shadow: 0 5px 10px rgba(0,0,0,0.1);
    }
    .button {
      background-color: #4CAF50; /* Green */
      border: none;
      color: white;
      padding: 10px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
      border-radius: 4px;
    }  
</style>
<div class="body-div">
    <div class="container">
       
        <h3>Edit credit client</h3>
        <form action="/admin/add-client" method="post">
            <div class="fields">
            <div class="input-field">
            <label for="">Client Name</label>
            <div  class="input-field3">
            <input name="clientName" value=<%=client.clientName%> type="text">
        </div>
        </div>
        <div class="input-field">
            <label for="">GST</label>
            <div class="input-field3">
            <input name="gst" value=<%=client.gst%> type="number">
        </div>
        </div>

        <div class="input-field">
            <label for="">Contact</label>
            <div class="input-field3">
            <input name="contact" value=<%=client.contact%> type="number">
        </div>
        </div>
</div>
<div class="fields">
    <div class="input-field">
        <label for="">Address</label>
        <div class="input-field3">
        <textarea name="address"  id="" cols="30" rows="5"><%=client.address%></textarea>
    </div>
</div>
<div class="input-field">
    <label for="">District</label>
    <div class="input-field3">
    <input name="district" value=<%=client.district%> type="text">
</div>
</div>
<div class="input-field">
    <label for="">State</label>
    <div class="input-field3">
    <input name="state" value=<%=client.state%> type="text">
</div>
</div>
    </div>
        <button class="button" type="submit">Submit</button>
        </form>
    </div>
    

</div>